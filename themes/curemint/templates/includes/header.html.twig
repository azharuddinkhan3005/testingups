<!-- custom header -->
<div class="row">

  <!-- logo and menu icon -->
  <div class="col-md-3 logo">
    <button type="button" class="navbar-toggle hide collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <a href="/"><img class="logo__img" alt="curemint" src="/themes/curemint/logo.png"></a>
  </div>

  <!-- search bar -->
  <div class="searchprod col-md-7">
    <form class="searchprod__form" action="/search">
      <div class="form-group searchprod__form-group">
        <input type="search" class="form-control searchprod__form-input" id="keyword" required placeholder="Search" name="keyword" value={{ keyword }}>
        <button type="submit" class="btn searchprod__form-btn"><img src="/themes/curemint/images/search.svg"></button>
      </div>
    </form>
  </div>

  <!-- nav bar -->
  <div class="col-md-2">
    <ul class="navtools">

      <!-- user icon-->
      <li class="navtools__list navtools__list-profile">
        <a class="navtools__profileicon" href="#">
          <img class="navtools__profileicon-img" src="/themes/curemint/images/user.jpg">
        </a>

        <!-- my order -->
        <ul class="myorder__dropdown">
          <li class="myorder__dropdown-list"><a class="myorder__dropdown-title" href="user/{{ user_id }}/orders">My Orders</a></li>
        </ul>
      </li>

      <!-- cart icon-->
      <li class="navtools__list navtools__list-cart">
        <a class="navtools__carticon" href="/cart">

          <!-- cart items -->
          {% if items_count %}
          <span class="navtools__carticon-item">{{ items_count }}</span>
          {% endif %}
          <img class="navtools__carticon-img" src="/themes/curemint/images/cart.jpg">
        </a>

        <!-- cart dropdown -->
        {% if items_count %}
        <ul class="cart__dropdown">
          <li class="cart__dropdown-list"><span class="cart__dropdown-title">Your Savings:</span><span class="cart__dropdown-price">{{ savings }}</span></li>
          <li class="cart__dropdown-list"><span class="cart__dropdown-title">Items in Your Cart:</span><span class="cart__dropdown-item">{{ items_count }}</span></li>

        </ul>
        {% endif %}
      </li>

    </ul>
  </div>

</div>
